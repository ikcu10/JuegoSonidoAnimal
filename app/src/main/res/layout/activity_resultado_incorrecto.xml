<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_app"
    tools:context=".ResultadoIncorrectoActivity">

    <!-- TEXTO SUPERIOR -->
    <TextView
        android:id="@+id/txtMuyBien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Uy, a la próxima!"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp" />

    <!-- IMAGEN CENTRAL COMO BOTÓN -->
    <ImageView
        android:id="@+id/btnCheck"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/incorrecto"
        android:padding="0dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/txtMuyBien"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- BOTÓN: SIGUIENTE NIVEL -->
    <Button
        android:id="@+id/btnReintar"
        android:layout_width="800dp"
        android:layout_height="80dp"
        android:text="Reintar"
        android:textSize="34sp"
        android:backgroundTint="#F2D06B"
        app:layout_constraintTop_toBottomOf="@id/btnCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp" />

    <!-- BOTÓN: MENÚ -->
    <Button
        android:id="@+id/btnMenu"
        android:layout_width="800dp"
        android:layout_height="80dp"
        android:text="Menú"
        android:textSize="34sp"
        android:backgroundTint="#8AD1EB"
        app:layout_constraintTop_toBottomOf="@id/btnReintar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
