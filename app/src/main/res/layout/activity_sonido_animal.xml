<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo (mantienes tu imagen) -->
    <ImageView
        android:id="@+id/fondo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/fondo_pantalla_quiz"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- PUNTUACIÓN (Nuevo - Arriba a la derecha) -->
    <TextView
        android:id="@+id/texto_puntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos: 100"
        android:textSize="24sp"
        android:textColor="#3A3A9F"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/animal_avatar"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Texto de la pregunta (igual que antes) -->
    <TextView
        android:id="@+id/texto_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 1"
        android:textSize="28sp"
        android:textColor="#3A3A9F"
        android:textStyle="bold"
        android:fontFamily="@font/potta_one"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Barra de progreso (igual que antes) -->
    <ProgressBar
        android:id="@+id/barra_progreso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="1000dp"
        android:layout_height="12dp"
        android:progress="40"
        android:max="100"
        android:progressDrawable="@drawable/estilo_barra_progreso"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/texto_pregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón del altavoz (igual que antes) -->
    <ImageView
        android:id="@+id/boton_sonido"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:src="@drawable/icono_sonido"
        android:contentDescription="Reproducir sonido"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/barra_progreso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/contenedorAnimales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/boton_sonido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>