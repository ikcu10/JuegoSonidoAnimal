<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/fondoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_avatar"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tituloAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige tu avatar!!"
        android:textSize="70sp"
        android:textColor="#5A4631"
        android:textStyle="bold"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp"
        />

    <!-- Contenedor de animales centrado -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="16dp"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- Botón Animal 1 -->
        <ImageButton
            android:id="@+id/btnOso"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avatar_oso"
            android:background="@drawable/animal_avatar"
            android:scaleType="centerCrop"
            android:layout_margin="40dp"
            android:padding="20dp"/>

        <!-- Botón Animal 2 -->
        <ImageButton
            android:id="@+id/btnRata"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avatar_oso_panda"
            android:background="@drawable/animal_avatar"
            android:scaleType="centerCrop"
            android:layout_margin="40dp"
            android:padding="20dp"/>

        <!-- Botón Animal 3 -->
        <ImageButton
            android:id="@+id/btnPinguino"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avatar_pinguino"
            android:background="@drawable/animal_avatar"
            android:scaleType="centerCrop"
            android:layout_margin="40dp"
            android:padding="20dp"/>

        <!-- Botón Animal 4 -->
        <ImageButton
            android:id="@+id/btnZorro"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avatar_zorro"
            android:background="@drawable/animal_avatar"
            android:scaleType="centerCrop"
            android:layout_margin="40dp"
            android:padding="27dp"/>

        <!-- Botón Animal 5 -->
        <ImageButton
            android:id="@+id/btnConejo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avatar_tigre"
            android:background="@drawable/animal_avatar"
            android:scaleType="centerCrop"
            android:layout_margin="40dp"
            android:padding="35dp"/>

        <!-- Botón Animal 6 -->
        <ImageButton
            android:id="@+id/btnJirafa"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avatar_leon"
            android:background="@drawable/animal_avatar"
            android:scaleType="centerCrop"
            android:layout_margin="40dp"
            android:padding="20dp"/>

    </GridLayout>

</FrameLayout>